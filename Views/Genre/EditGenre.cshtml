@model GenreDTO
@{
}
<div class="container mt-4" style="max-width: 500px;">
    <h2 class="text-center mb-4">Update Genre</h2>
    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Index" asp-controller="Genre" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>
    <form asp-action="UpdateGenre" class="border p-4 shadow-sm rounded">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label for="genreName" class="form-label fw-bold">Genre Name</label>
            <input type="text" id="genreName" class="form-control" asp-for="GenreName" placeholder="Enter new genre name" />
            <span asp-validation-for="GenreName" class="text-danger small"></span>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-info text-white">
                <i class="bi bi-pencil"></i> Update Genre
            </button>
        </div>
    </form>
</div>
