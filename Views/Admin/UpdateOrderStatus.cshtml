@model UpdateOrderStatusModel
@{
    ViewData["Title"] = "Update Order Status";
}

<h2 class="text-center mb-4">Update Order Status</h2>
<a class="btn btn-secondary mb-4" asp-action="AllOrders">&#8592; Back to All Orders</a>

<div class="card" style="max-width: 600px; margin: 0 auto;">
    <div class="card-body">
        <form asp-action="UpdateOrderStatus" class="pt-2">
            <input type="hidden" asp-for="OrderId" />

            <div class="form-group mb-3">
                <label for="orderStatus" class="form-label">Order Status</label>
                <select id="orderStatus" class="form-control" asp-for="OrderStatusId" asp-items="@Model.OrderStatusList">
                    <option value="">-- Select Order Status --</option>
                </select>
                <span class="text-danger" asp-validation-for="OrderStatusId"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Update Status</button>
        </form>

        @if (TempData["msg"] != null)
        {
            <div class="alert alert-info mt-3" role="alert">
                @TempData["msg"]
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Optional: Add client-side functionality if needed
        console.log('Update Order Status Page Loaded');
    </script>
}
